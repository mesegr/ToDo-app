<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/widget_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/widget_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mis Tareas - Hoy"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />

        <ImageButton
            android:id="@+id/add_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_input_add"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:contentDescription="AÃ±adir tarea" />
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#3D3350"
        android:layout_marginBottom="8dp" />

    <!-- Tareas con alarma -->
    <LinearLayout
        android:id="@+id/alarm_tasks_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â° Con alarma"
            android:textSize="12sp"
            android:textColor="#8B5CF6"
            android:textStyle="bold"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/alarm_tasks_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:paddingBottom="6dp" />
    </LinearLayout>

    <!-- Tareas pendientes -->
    <LinearLayout
        android:id="@+id/pending_tasks_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“‹ Pendientes"
            android:textSize="12sp"
            android:textColor="#8B5CF6"
            android:textStyle="bold"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/pending_tasks_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:paddingBottom="6dp" />
    </LinearLayout>

    <!-- Empty state -->
    <TextView
        android:id="@+id/empty_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No hay tareas para hoy"
        android:textSize="13sp"
        android:textColor="#808080"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:visibility="visible" />

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Summary -->
    <TextView
        android:id="@+id/task_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0 tareas hoy"
        android:textSize="11sp"
        android:textColor="#808080"
        android:gravity="center"
        android:paddingTop="4dp" />
</LinearLayout>
